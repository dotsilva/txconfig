export PATH="$HOME/.cargo/bin:$PATH"

# Auto-start tmux no Termux

# garantir 256-color + truecolor
export TERM=${TERM:-xterm-256color}
export COLORTERM=truecolor

#tmux
if [[ -z "$TMUX" ]]; then
  # Se não estiver no TMUX, anexe à sessão 'default' ou crie uma nova.
  tmux attach-session -t default || tmux new-session -s default
fi

# Adicionar o diretório de binários do RubyGems ao PATH
if [ -d "$HOME/.gem/ruby/3.2.0/bin" ]; then
  export PATH="$HOME/.gem/ruby/3.2.0/bin:$PATH"
fi

# Adicionar o diretório de binários do NPM ao PATH
if [ -d "$HOME/node_modules/bin" ]; then
  export PATH="$HOME/node_modules/bin:$PATH"
fi

cd() {
  builtin cd "$@" && ls -AF
}
